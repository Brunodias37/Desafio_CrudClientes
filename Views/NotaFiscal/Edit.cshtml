@model CrudClientes.Models.NotaFiscal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 border">
    <div class="row">
        <div class="col-sm-6">
            <form asp-action="Save">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DataEmissao" class="control-label"></label>
                    <input asp-for="DataEmissao" class="form-control" />

                </div>
                <div class="form-group">

                    <label asp-for="TipoDeFrete" class="control-label"></label>
                    <input asp-for="TipoDeFrete" class="form-control" />
                </div>
                <div class="form-group">

                    <label asp-for="Cliente" class="control-label"></label>
                    <select asp-for="ClienteId" asp-items="@ViewBag.Clientes"></select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Salvar" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}