@model CrudClientes.Models.ItensNotaFiscal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 border">
    <div class="row">
        <div class="col-sm-6">
            <form asp-action="Save">
                <div class="form-group">
                    <label asp-for="NotaFiscalId" class="control-label"></label>
                    <input asp-for="NotaFiscalId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" asp-items="@ViewBag.Produtos" ></select>
                </div>
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PrecoUnitario" class="control-label"></label>
                    <input asp-for="PrecoUnitario" class="form-control" />
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Salvar" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>